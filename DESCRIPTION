Package: leem
Type: Package
Title: Laboratory of Teaching to Statistics and Mathematics
Version: 0.2.0.9000
Authors@R: c(
    person("Ben", "Deivide", email = "ben.deivide@gmail.com", 
    role = c("aut", "cre"), comment = c(ORCID = '0000-0001-7019-8794')),
    person("Alexandre", "Celestino", email = "celestino@ufsj.edu.br", 
    role = c("ctb"), comment = c(ORCID = '0000-0003-3475-3863')),
